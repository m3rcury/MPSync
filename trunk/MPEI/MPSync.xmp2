using MpeCore.Classes;
using MpeCore;
using System.IO;

public class Script
{
    public static void Main(PackageClass packageClass, ActionItem actionItem)
    {
         string oldplugin = Path.Combine(Path.Combine(MpeInstaller.TransformInRealPath("%Plugins%"), "process"), "CDB_Sync.dll");
